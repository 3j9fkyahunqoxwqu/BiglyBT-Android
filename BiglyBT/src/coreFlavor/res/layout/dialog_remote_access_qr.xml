<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingLeft="16dp"
	android:paddingRight="16dp"
	>

	<com.llollox.androidtoggleswitch.widgets.ToggleSwitch
		android:id="@+id/remote_access_qr_toggle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_margin="8dp"
		app:textToggleLeft="@string/dialog_remote_access_biglybt_qr_button"
		app:textToggleRight="@string/dialog_remote_access_webui_qr_button"
		app:toggleWidth="150dp"/>

	<TextView
		android:id="@+id/tv_info"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_margin="8dp"
		android:gravity="center_horizontal"
		tools:text="@string/dialog_remote_access_biglybt_qr_info"/>

	<ImageView
		android:id="@+id/iv_qr"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:adjustViewBounds="false"
		android:scaleType="fitCenter"
		tools:ignore="ContentDescription"
		tools:src="@drawable/biglybt_logo"/>

</LinearLayout>