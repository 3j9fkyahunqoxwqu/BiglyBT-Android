<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
							android:layout_width="match_parent"
							android:layout_height="fill_parent"
							android:orientation="vertical"
							android:padding="10dp">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Give Back"
		android:textAppearance="?android:attr/textAppearanceLarge"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:linksClickable="true"
		android:text="BiglyBT does not charge for additional features, nor does it cripple its software until you pay."
		android:textAppearance="?android:attr/textAppearanceMedium"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:text="Please consider purchasing a subscription, so that we can continue to maintain and develop BiglyBT for Android."
		android:textAppearance="?android:attr/textAppearanceMedium"/>

	<ListView
		android:id="@+id/giveback_listview"
		android:layout_marginTop="16dp"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>


</LinearLayout>