<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/drawer_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".activity.LoginActivity" >

	<ImageView
		android:id="@+id/pairing_menu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="10dp"
		android:adjustViewBounds="true"
		android:contentDescription="@string/pairing_menu"
		android:scaleType="fitStart"
		android:src="@drawable/pairing_menu" />

	<TextView
		android:id="@+id/addtorrent_label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/pairing_menu"
		android:labelFor="@+id/editTextAccessCode"
		android:text="@string/login_label_code" />

	<CheckBox
		android:id="@+id/chkLoginRemember"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/addtorrent_label"
		android:layout_below="@+id/editTextAccessCode"
		android:text="@string/chkLoginRemember" />

	<EditText
		android:id="@+id/editTextAccessCode"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/addtorrent_label"
		android:layout_marginTop="20dp"
		android:layout_toLeftOf="@+id/btnLogin"
		android:layout_toRightOf="@+id/pairing_menu"
		android:ems="10"
		android:hint="@string/access_code_hint"
		android:imeActionLabel="@string/btnLoginLabel"
		android:inputType="textCapCharacters" />

	<Button
		android:id="@+id/btnLogin"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/editTextAccessCode"
		android:layout_alignParentRight="true"
		android:layout_alignTop="@+id/editTextAccessCode"
		android:onClick="loginButtonClicked"
		android:text="@string/btnLoginLabel" />

</RelativeLayout>