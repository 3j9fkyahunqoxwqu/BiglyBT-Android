<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main_loginlayout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	tools:context=".activity.LoginActivity" >

	<ImageView
		android:id="@+id/pairing_menu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/login_horizontal_margin"
		android:layout_marginRight="5dp"
		android:layout_marginTop="5dp"
		android:adjustViewBounds="true"
		android:contentDescription="@string/pairing_menu"
		android:scaleType="fitStart"
		android:src="@drawable/pairing_menu" />

	<TextView
		android:id="@+id/addtorrent_label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="5dp"
		android:layout_marginRight="@dimen/login_horizontal_margin"
		android:layout_marginTop="5dp"
		android:layout_toRightOf="@+id/pairing_menu"
		android:labelFor="@+id/editTextAccessCode"
		android:text="@string/login_label_code"
		android:textSize="13sp" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignRight="@+id/addtorrent_label"
		android:layout_below="@+id/addtorrent_label"
		android:layout_toRightOf="@+id/pairing_menu"
		android:dividerPadding="0dp"
		android:orientation="vertical" >

		<EditText
			android:id="@+id/editTextAccessCode"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/access_code_hint"
			android:imeActionLabel="@string/btnLoginLabel"
			android:imeOptions="actionGo"
			android:inputType="textCapCharacters" >

			<requestFocus />
		</EditText>

		<CheckBox
			android:id="@+id/chkLoginRemember"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="@string/chkLoginRemember" />

		<Button
			android:id="@+id/btnLogin"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:minHeight="10dp"
			android:onClick="loginButtonClicked"
			android:text="@string/btnLoginLabel" />
	</LinearLayout>

</RelativeLayout>